@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Заявки</title>
</head>
<body>
    <div>
        <h3>Заявки</h3>
        <table>
            <tr>
                <td><p>Id заявки</p></td>
                <td><p>Заголовок заявки</p></td>
                <td><p>Автор</p></td>
                <td><p>Дата создания</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Orders)
            {
            <tr>
                <td><p>@b.OrderId</p></td>
                <td><p>@b.NameOrder</p></td>
                <td><p>@b.AutorId</p></td>
                <td><p>@b.dateCreate</p></td>
                <td><p><a href="/Home/Order/@b.OrderId">Создать заявку</a></p></td>
            </tr>
            }
        </table>
    </div>
</body>
</html>